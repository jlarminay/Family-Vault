model Item {
  id          Int     @id @default(autoincrement())
  description String?
  people      String?
  view        Int     @default(0)
  type        String

  // file data
  name     String
  path     String @unique
  size     String
  metadata Json?

  dateEstimate Boolean  @default(false)
  takenAt      DateTime @db.Date

  ownerId Int
  owner   User @relation(name: "OwnedVideo", fields: [ownerId], references: [id])

  published String @default("private")
  allowList User[] @relation(name: "AllowList")
  blockList User[] @relation(name: "BlockList")

  comment Comment[]
  history History[]
  like    Like[]
  report  Report[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
